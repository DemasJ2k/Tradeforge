# TradeForge Backend Configuration
# Copy this file to .env and fill in your values

# Set to true for local development (adds localhost CORS origins)
DEBUG=false

# Generate a secure random string: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=generate-a-random-64-char-string

# Database URL â€” SQLite for local dev, PostgreSQL for production
# Local:      sqlite:///./data/tradeforge.db
# Production: postgresql://user:password@host:5432/tradeforge
DATABASE_URL=sqlite:///./data/tradeforge.db

# Frontend URL for CORS (no trailing slash)
FRONTEND_URL=http://localhost:3000

# File uploads directory
UPLOAD_DIR=./data/uploads

# SMTP settings for invitation emails
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
NOTIFICATION_EMAIL=
